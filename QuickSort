#include<stdio.h>
#include<time.h>
#include<stdlib.h>

int QuickSort(int a[],int p,int r);
int Partition(int a[],int p,int r);
void Swap(int *x,int *y);

void Swap(int *x,int *y)
{
         int temp;
         temp=*x;
         *x=*y;
         *y=temp;
}
int QuickSort(int a[],int p,int r)
{
	    if(p<r)
	    {
		    int q;
		    q=Partition(a,p,r);
		    QuickSort(a,p,q-1);
		    QuickSort(a,q+1,r);
	    }
} 

int Partition(int a[],int p,int r)
{
	    int i=p,j=r+1;
	    int x=a[p];
	    int temp;
	    int m,n;
	    while(true)
	    {
		    while(a[++i]<x&&i<r);
		    while(a[--j]>x);
		    if(i>=j)break;
		    Swap(&a[i],&a[j]);
	    }
	    a[p]=a[j];
	    a[j]=x;
	    return j;
}

int main(void)
{
	    int a[10];
	    int i;
	    int n=0;
	    srand((unsigned)time(NULL));
	    for(i=0;i<10;i++){
		    a[i]=rand()%100;	
		    n++;
	    }
	
	    printf("随机生成10个整数:\n");
	    for(int j=0;j<10;j++)
		    printf("%d\t",a[j]);	
	    QuickSort(a,0,n-1);
	    printf("\n经过快速排序:\n");
	    for(i=0;i<10;i++){
	
	   	    printf("%d\t",a[i]);
	    }
	
	    printf("\n");
	    return 0;
}
